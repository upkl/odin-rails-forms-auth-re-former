<%= form_with model: @user, method: :patch do |form| %>
  <%= label_tag :username, "Your username here:" %>
  <%= form.text_field :username, placeholder: "John Doe" %>
  <%= label_tag :email %>
  <%= form.email_field :email, placeholder: "some@where.org" %>
  <%= label_tag :password %>
  <%= form.password_field :password %>
  <%= form.submit %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

